                        $("#document_no").val("");
                        $("#date_in_str").val("");
                        $("#id").val("");
                        $("#location_name").val("");
                        $("#doc_status").html("");
                        $("#weight_register").val("");
                        $("#weight_in").val("");
                        $("#weight_out").val("");
                        $("#weight_diff").val("");
                        $("#weight_in_2").val("");
                        $("#weight_out_2").val("");
                        $("#weight_diff_2").val("");
                        $("#doc_status_text").html("");
                        $("#frmWeightOUT").hide();
                        toastr.error(`${data.message}`);

