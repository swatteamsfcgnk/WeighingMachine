            var category_fix_percentage_diff = $("#category_fix_percentage_diff").val()
            if (doc_stat === "WEIGHT-IN") {
                //debugger
                if (percen_diff_weight_out_1 > category_fix_percentage_diff && category_fix_percentage_diff !== "0") {

